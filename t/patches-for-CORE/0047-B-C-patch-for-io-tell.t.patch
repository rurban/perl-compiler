 binmode OTHER if (($^O eq 'MSWin32') || ($^O eq 'NetWare'));
 
 {
@@ -172,7 +171,7 @@ else {
 
 close $tst;
 
-open FH, "test.pl";
+open FH, "t/CORE/TEST";
 $fh = *FH; # coercible glob
 $not = "not " x! (tell $fh == 0);
 print "${not}ok 29 - tell on coercible glob\n";
